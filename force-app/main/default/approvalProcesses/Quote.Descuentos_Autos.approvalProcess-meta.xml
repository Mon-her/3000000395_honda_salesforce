<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Opportunity</field>
        <field>GrandTotal</field>
        <field>Valor_Vehiculo_Renting__c</field>
        <field>Discount</field>
        <field>Descuento_Valor__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Aprobado_el_descuento</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Descuento_aprobado</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(Descuento_Valor__c  &gt;  Maximo_descuento_asesor__c, Descuento_Valor__c  &lt;  Maximo_descuento_jefe_gerente__c)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Descuento para asesores</label>
        <name>Descuento_para_asesores</name>
        <rejectionActions>
            <action>
                <name>rechazado_descuento</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Aprobado_el_descuento</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Descuento_aprobado</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>jawilson@fanalca.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(Descuento_Valor__c    &gt;=  Maximo_descuento_jefe_gerente__c, Descuento_Valor__c  &lt;  Maximo_descuento_gerente_nacional__c)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Descuento para jefes/gerentes</label>
        <name>Descuento_para_jefes_gerentes</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>rechazado_descuento</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Aprobado_el_descuento</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Descuento_aprobado</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>nrendon@fanalca.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>Descuento_Valor__c  &gt;=  Maximo_descuento_gerente_nacional__c</formula>
        </entryCriteria>
        <label>Descuento GG</label>
        <name>Descuento_GG</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>rechazado_descuento</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Aprueba_Autos</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(Descuento_Valor__c  &gt;  Maximo_descuento_asesor__c,  Opportunity.RecordType.Name=&quot;Oportunidad Autos&quot; )</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Descuentos Autos</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>4</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
